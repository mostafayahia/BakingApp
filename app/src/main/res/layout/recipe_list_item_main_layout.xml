<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_recipe_main_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recipe_card_height"
    android:background="@drawable/touch_selector"
    tools:background="#ffee">

    <ImageView
        android:id="@+id/list_item_recipe_image"
        android:layout_width="@dimen/recipe_card_height"
        android:layout_height="@dimen/recipe_card_height"
        android:layout_marginStart="@dimen/list_item_padding"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        tools:src="@drawable/ic_launcher_background"
        android:layout_marginLeft="@dimen/list_item_padding" />

    <TextView
        android:id="@+id/list_item_recipe_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/black"
        tools:text="Brownies" />
</LinearLayout>